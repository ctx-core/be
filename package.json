{
	"name": "@ctx-core/be",
	"version": "0.2.1",
	"description": "ctx-core be",
	"keywords": [
		"ctx-core",
		"context",
		"general purpose context",
		"be"
	],
	"homepage": "https://github.com/ctx-core/be#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/be/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/be.git"
	},
	"license": "Apache-2.0",
	"author": {
		"name": "Brian Takita",
		"url": "https://briantakita.me",
		"email": "info+ctx-core-be@briantakita.me"
	},
	"files": [
		"*.d.ts",
		"*.js",
		"*.json"
	],
	"type": "module",
	"exports": {
		".": "./index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": ":",
		"clean": ":",
		"exec": "$@",
		"prepublishOnly": "pnpm clean && pnpm build && pnpm test",
		"test": "pnpm run /^test:/",
		"test:size": "size-limit",
		"test:types": "check-dts",
		"test:unit": "tsx node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"disable:test:unit:coverage": "c8 pnpm test:unit"
	},
	"dependencies": {
		"ctx-core": "^6.6.1"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^11.1.1",
		"c8": "^9.1.0",
		"check-dts": "^0.7.2",
		"size-limit": "^11.1.1",
		"tsx": "^4.7.1",
		"typescript": "next",
		"uvu": "^0.5.6"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false,
	"size-limit": [
		{
			"name": "ctx_",
			"import": {
				".": "{ ctx_ }"
			},
			"limit": "33 B"
		},
		{
			"name": "ns_ctx_",
			"import": {
				".": "{ ns_ctx_ }"
			},
			"limit": "85 B"
		},
		{
			"name": "be_",
			"import": {
				".": "{ be_ }"
			},
			"limit": "99 B"
		},
		{
			"name": "be_ ctx_",
			"import": {
				".": "{ be_, ctx_ }"
			},
			"limit": "131 B"
		},
		{
			"name": "be_ ns_ctx_",
			"import": {
				".": "{ be_, ctx_, ns_ctx_ }"
			},
			"limit": "191 B"
		},
		{
			"name": "be_ ctx_ ns_ctx_",
			"import": {
				".": "{ be_, ctx_, ns_ctx_ }"
			},
			"limit": "191 B"
		}
	]
}
